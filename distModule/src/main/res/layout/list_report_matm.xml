<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.di_md.a2z.model.MatmReportData" />
        <import type="com.di_md.a2z.util.ents.StringEntsKt" />
    </data>

   <androidx.cardview.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="4dp"
       app:contentPadding="8dp">
       <LinearLayout
           android:id="@+id/ll_main_layout"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
          >


           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">

                   <TextView
                       android:id="@+id/tv_date"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       tools:text="2019-03-06 17:06:14"
                       android:text="@{item.txn_time}"
                       android:textStyle="italic"
                       android:textSize="14sp" />

                   <View
                       android:layout_width="match_parent"
                       android:layout_height="0.5dp"
                       android:layout_marginRight="30dp"
                       android:background="#918F8F" />
                   <TextView
                       android:id="@+id/tv_aeps_type"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       tools:text="id"
                       android:text="@{StringEntsKt.naString(item.service_name)}"
                       android:gravity="start"
                       android:textSize="14sp" />

               </LinearLayout>

               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_weight="1.5"
                   android:layout_gravity="center"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">

                   <TextView
                       android:id="@+id/tv_aadhaar_number"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:gravity="center"
                       android:text="@{StringEntsKt.naString(item.card_number)}"
                       tools:text="Card Number"
                       android:textSize="12sp" />

                   <View
                       android:layout_width="match_parent"
                       android:layout_height="0.5dp"
                       android:layout_marginRight="15dp"
                       android:layout_marginLeft="15dp"
                       android:background="#918F8F" />

                   <View
                       android:layout_width="match_parent"
                       android:layout_height="0.5dp"
                       android:layout_marginRight="15dp"
                       android:layout_marginLeft="15dp"
                       android:background="#918F8F" />

                   <TextView
                       android:id="@+id/tv_closingBalance"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       tools:text="Transaction Type"
                       android:text="@{item.transaction_type}"
                       android:gravity="center"
                       android:textStyle="bold"
                       android:textSize="12sp" />

               </LinearLayout>

               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">

                   <TextView
                       android:id="@+id/tv_status"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:gravity="right"
                       android:text="@{StringEntsKt.naString(item.status_desc)}"
                       android:textSize="14sp"
                       android:textStyle="bold" />

                   <View
                       android:layout_width="match_parent"
                       android:layout_height="0.5dp"
                       android:layout_marginLeft="30dp"
                       android:background="#918F8F" />

                   <TextView
                       android:id="@+id/tv_amount"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:gravity="right"
                       tools:text="Amt"
                       android:text="@{item.transaction_amount}"
                       android:textStyle="bold"
                       android:textSize="14sp" />

                   <View
                       android:layout_width="match_parent"
                       android:layout_height="0.5dp"
                       android:layout_marginLeft="30dp"
                       android:background="#918F8F" />



               </LinearLayout>


           </LinearLayout>

           <LinearLayout
               android:id="@+id/ll_arrow_hideable"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal">

               <TextView
                   android:id="@+id/tv_itemCount"
                   android:layout_width="20dp"
                   android:layout_height="20dp"
                   android:layout_gravity="center"
                   android:layout_marginLeft="10dp"
                   android:background="@drawable/bg_white_30"
                   android:gravity="center"
                   android:text="1"
                   android:textColor="@color/text_color_2"
                   android:textSize="10sp" />


               <RelativeLayout
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:layout_margin="5dp"

                   android:layout_weight="1"
                   android:orientation="horizontal"
                   android:padding="0dp">

                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_centerInParent="true"
                       android:layout_gravity="center"
                       android:layout_weight="1"
                       android:orientation="horizontal"
                       android:padding="0dp">

                       <ImageButton
                           android:layout_height="32dp"
                           android:layout_width="32dp"
                           android:scaleType="fitCenter"
                           android:background="@android:color/transparent"
                           android:layout_gravity="center_vertical"
                           android:tint="@color/colorPrimaryDark"
                           android:id="@+id/btn_print"
                           android:src="@drawable/ic_baseline_print_24"
                           />


                   </LinearLayout>

               </RelativeLayout>


               <ImageView
                   android:id="@+id/iv_arrow_indicator"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:layout_marginRight="20dp"
                   android:src="@drawable/v_arrow_down" />


           </LinearLayout>

           <LinearLayout
               android:id="@+id/ll_hideable"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:visibility="gone"
               tools:visibility="visible">

               <View
                   android:layout_width="match_parent"
                   android:layout_height="0.5dp"
                   android:layout_marginTop="5dp"
                   android:background="#DFDADA" />

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="0.6"
                       android:text="Order Id" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="  :  " />


                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:text="@{StringEntsKt.naString(item.order_id)}"
                       tools:text="N/A" />


               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="0.6"
                       android:text="Mode" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="  :  " />


                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:text="@{StringEntsKt.naString(item.transaction_mode)}"
                       tools:text="N/A" />


               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="0.6"
                       android:text="Card Type" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="  :  " />


                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:text="@{StringEntsKt.naString(item.card_type)}"
                       tools:text="N/A" />


               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="0.6"
                       android:text="Customer Mobile" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="  :  " />


                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:text="@{StringEntsKt.naString(item.customer_number)}"
                       tools:text="N/A" />


               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="0.6"
                       android:text="Bank Ref" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="  :  " />


                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:text="@{StringEntsKt.naString(item.bank_ref)}"
                       tools:text="N/A" />


               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="0.6"
                       android:text="Txn Id" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="  :  " />


                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:text="@{StringEntsKt.naString(item.txn_id)}"
                       tools:text="N/A" />


               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="0.6"
                       android:text="Credit Charge" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="  :  " />


                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:text="@{StringEntsKt.naString(item.credit_charge)}"
                       tools:text="N/A" />


               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="0.6"
                       android:text="Debit Charge" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="  :  " />


                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:text="@{StringEntsKt.naString(item.debit_charge)}"
                       tools:text="N/A" />


               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="0.6"
                       android:text="TDS" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="  :  " />


                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:text="@{StringEntsKt.naString(item.tds)}"
                       tools:text="N/A" />


               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="0.6"
                       android:text="GST" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="  :  " />


                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:text="@{StringEntsKt.naString(item.gst)}"
                       tools:text="N/A" />


               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="0.6"
                       android:text="Available Amt." />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="  :  " />


                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:text="@{StringEntsKt.naString(item.available_amount)}"
                       tools:text="N/A" />


               </LinearLayout>




               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">

                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="0.6"
                       android:text="Message" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="  :  " />


                   <TextView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:text="@{StringEntsKt.naString(item.message)}"
                       tools:text="N/A" />


               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="right"
                   android:layout_marginTop="8dp"
                   android:orientation="horizontal">

                   <TextView
                       android:layout_width="20dp"
                       android:layout_height="20dp"
                       android:layout_marginLeft="10dp"
                       android:layout_marginTop="5dp"
                       android:text="1"
                       android:textSize="10sp"
                       android:gravity="center"
                       android:textColor="@color/text_color_2"
                       android:background="@drawable/bg_white_30"
                       android:id="@+id/tv_itemCount2" />

                   <View
                       android:layout_width="0dp"
                       android:layout_height="1dp"
                       android:layout_weight="0.5" />
                   <com.google.android.material.button.MaterialButton
                       style="@style/AppButton.Small.Primary"
                       android:id="@+id/btn_check_status"
                       android:layout_margin="5dp"
                       android:insetLeft="0dp"
                       android:insetRight="0dp"
                       app:icon="@drawable/ic_refresh"
                       android:text="Check Status"/>

                   <View
                       android:layout_width="0dp"
                       android:layout_height="1dp"
                       android:layout_weight="0.5" />

                   <ImageView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/v_arrow_up"
                       android:layout_marginRight="20dp"
                       android:id="@+id/iv_arrow_indicator2" />


               </LinearLayout>


           </LinearLayout>


       </LinearLayout>
   </androidx.cardview.widget.CardView>
</layout>
