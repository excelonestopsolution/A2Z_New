<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">
        <RelativeLayout
            android:background="@color/white"
            android:id="@+id/rr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="6dp">



                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_user_profile"
                    android:layout_width="110dp"
                    android:layout_height="115dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_no_image"
                    app:civ_border_color="#FF9800"
                    app:civ_border_width="2dp" />



                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/text_color_2"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_outletName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="Shop Name"
                    android:textColor="@color/text_color_3"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#FF9800"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"/>



                    <LinearLayout
                        android:layout_margin="10dp"
                        android:background="@drawable/bg_white"
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:orientation="horizontal">

                            <TextView
                                style="@style/TextStyleProfile1"
                                android:text="MOBILE"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:gravity="left|center"
                                android:textStyle="bold"
                                android:textColor="#20343D"
                                android:textSize="18sp"
                                android:text="  :  "/>


                            <TextView

                                style="@style/TextStyleProfile2"
                                android:id="@+id/tv_mobile"
                                android:text=""/>
                            <TextView
                                android:background="@drawable/bg_red_border"
                                android:textStyle="bold"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:paddingBottom="3dp"
                                android:paddingTop="3dp"
                                android:textSize="16sp"
                                android:layout_height="wrap_content"
                                android:layout_width="60dp"
                                android:gravity="center"
                                android:id="@+id/tv_mobile_verify"
                                android:textColor="#F44336"
                                android:text="verify"/>
                            <ImageView
                                android:visibility="gone"
                                android:id="@+id/mobile_verified_image"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_check_tick"
                                android:tint="@color/green"/>


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/TextStyleProfile1"
                                android:text="EMAIL"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:gravity="left|center"
                                android:textStyle="bold"
                                android:textColor="#20343D"
                                android:textSize="18sp"
                                android:text="  :  "/>


                            <TextView
                                style="@style/TextStyleProfile2"
                                android:id="@+id/tv_email"
                                android:text="demo@dummy.in"/>
                            <TextView
                                android:id="@+id/extra"
                                android:visibility="invisible"
                                android:background="@drawable/bg_red_border"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:paddingBottom="3dp"
                                android:paddingTop="3dp"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:layout_width="60dp"
                                android:textColor="#F44336"
                                android:text="verify"/>
                            <ImageView
                                android:visibility="gone"
                                android:id="@+id/email_verified_image"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_check_tick"
                                android:tint="@color/green"/>

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ll_options"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:visibility="invisible"
                                style="@style/TextStyleProfile1"
                                android:text="EMAIL"/>





                            <TextView
                                android:background="@drawable/bg_green_border"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:paddingBottom="3dp"
                                android:paddingTop="3dp"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:layout_width="0dp"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:id="@+id/tv_email_change"
                                android:textColor="@color/green"
                                android:text="change"/>
                            <TextView
                                android:background="@drawable/bg_red_border"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:paddingBottom="3dp"
                                android:paddingTop="3dp"
                                android:gravity="center"
                                android:layout_height="wrap_content"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:id="@+id/tv_email_verify"
                                android:textColor="#F44336"
                                android:text="verify"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/TextStyleProfile1"
                                android:text="BALANCE"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:gravity="left|center"
                                android:textStyle="bold"
                                android:textColor="#20343D"
                                android:textSize="18sp"
                                android:text="  :  "/>


                            <TextView
                                style="@style/TextStyleProfile2"
                                android:id="@+id/tv_balance"
                                android:text="0.00"/>
                            <TextView
                                android:visibility="invisible"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:layout_height="wrap_content"
                                android:layout_width="60dp"
                                android:textColor="#F44336"
                                android:text="verify"/>


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/TextStyleProfile1"
                                android:text="ROLL"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:gravity="left|center"
                                android:textStyle="bold"
                                android:textColor="#20343D"
                                android:textSize="18sp"
                                android:text="  :  "/>


                            <TextView
                                style="@style/TextStyleProfile2"
                                android:id="@+id/tv_roll"
                                android:text="5"/>
                            <TextView
                                android:visibility="invisible"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:layout_height="wrap_content"
                                android:layout_width="60dp"
                                android:textColor="#F44336"
                                android:text="verify"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/TextStyleProfile1"
                                android:text="ADDRESS"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:gravity="left|center"
                                android:textStyle="bold"
                                android:textColor="#20343D"
                                android:textSize="18sp"
                                android:text="  :  "/>


                            <TextView
                                style="@style/TextStyleProfile2"
                                android:id="@+id/tv_address"
                                android:text="address"/>
                            <TextView
                                android:visibility="invisible"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:layout_height="wrap_content"
                                android:layout_width="60dp"
                                android:textColor="#F44336"
                                android:text="verify"/>


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/TextStyleProfile1"
                                android:text="SHOP NAME"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:gravity="left|center"
                                android:textStyle="bold"
                                android:textColor="#20343D"
                                android:textSize="18sp"
                                android:text="  :  "/>


                            <TextView
                                style="@style/TextStyleProfile2"
                                android:id="@+id/tv_shopName"
                                android:text="abc"/>
                            <TextView
                                android:visibility="invisible"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:layout_height="wrap_content"
                                android:layout_width="60dp"
                                android:textColor="#F44336"
                                android:text="verify"/>


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/TextStyleProfile1"
                                android:text="SHOP ADDRESS"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:gravity="left|center"
                                android:textStyle="bold"
                                android:textColor="#20343D"
                                android:textSize="18sp"
                                android:text="  :  "/>


                            <TextView
                                style="@style/TextStyleProfile2"
                                android:id="@+id/tv_shopAddress"
                                android:text="abcx"/>
                            <TextView
                                android:visibility="invisible"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:layout_height="wrap_content"
                                android:layout_width="60dp"
                                android:textColor="#F44336"
                                android:text="verify"/>


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/TextStyleProfile1"
                                android:text="JOINING DATE"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:gravity="left|center"
                                android:textStyle="bold"
                                android:textColor="#20343D"
                                android:textSize="18sp"
                                android:text="  :  "/>


                            <TextView
                                style="@style/TextStyleProfile2"
                                android:id="@+id/tv_joiningDate"
                                android:text="NAasdfME"/>
                            <TextView
                                android:visibility="invisible"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:layout_height="wrap_content"
                                android:layout_width="60dp"
                                android:textColor="#F44336"
                                android:text="verify"/>


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                style="@style/TextStyleProfile1"
                                android:text="LAST UPDATE"/>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:gravity="left|center"
                                android:textStyle="bold"
                                android:textColor="#20343D"
                                android:textSize="18sp"
                                android:text="  :  "/>


                            <TextView
                                style="@style/TextStyleProfile2"
                                android:id="@+id/tv_lastUpdate"
                                android:text="SFDFS"/>
                            <TextView
                                android:visibility="invisible"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:layout_height="wrap_content"
                                android:layout_width="60dp"
                                android:textColor="#F44336"
                                android:text="verify"/>


                        </LinearLayout>


                    </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="10dp"
                    android:id="@+id/edit_tv"
                    android:gravity="center"
                    android:text="Edit Profile"
                    android:textColor="#2196F3"
                    android:textSize="20sp"
                    android:visibility="gone"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/ll_kycNotify"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:visibility="gone"
                    android:background="@drawable/btn_kyc_status"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textKycHeading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:text="Upgrade Wallet / Complete KYC"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textKycDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="10dp"
                        android:text="Upgrade your wallet limit for better benefits!"
                        android:textColor="@color/white" />
                    <TextView
                        android:id="@+id/upgradAadharCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="15dp"
                        android:paddingLeft="10dp"
                        android:drawableTint="@color/white"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/ic_check_tick"
                        android:paddingTop="8dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="8dp"
                        android:text="AADHAR CARD"
                        android:textColor="@color/white" />
                    <TextView
                        android:id="@+id/notupgradePanCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="15dp"
                        android:paddingLeft="10dp"
                        android:drawableTint="@color/white"
                        android:drawablePadding="7dp"
                        android:drawableLeft="@drawable/ic_cross_close2"
                        android:paddingTop="8dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="8dp"
                        android:text="PANCARD"
                        android:textColor="@color/white" />
                    <TextView
                        android:id="@+id/upgradePanCard"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="15dp"
                        android:paddingLeft="10dp"
                        android:drawableTint="@color/white"
                        android:drawablePadding="7dp"
                        android:drawableLeft="@drawable/ic_check_tick"
                        android:paddingTop="8dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="8dp"
                        android:text="PANCARD"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tvb_upgradeNow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/border_textview_no_background"
                        android:paddingLeft="10dp"
                        android:paddingTop="8dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="8dp"
                        android:text="Upgrade Now"
                        android:textColor="@color/white" />
                    <ImageView
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_check_tick"
                        android:layout_marginLeft="25dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="10dp"
                        android:tint="@color/white"
                        android:id="@+id/check"/>

                </LinearLayout>
            </LinearLayout>
            <ProgressBar
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_centerInParent="true"
                android:indeterminateDrawable="@drawable/myprogress_style"
                android:id="@+id/progressState"/>

        </RelativeLayout>

    </ScrollView>

</LinearLayout>