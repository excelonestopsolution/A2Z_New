<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_margin="1dp"
        android:id="@+id/ll_success"
        android:padding="2dp"
        android:background="@drawable/bg_white_5"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Success"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="16sp"
            android:id="@+id/tv_heading"
            android:padding="5dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/TextStyleCommission"
                android:text="Total Sale"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  :  " />


            <TextView

                style="@style/TextStyleCommission"
                android:layout_weight="1"
                android:text="0.00"
                android:id="@+id/tv_totalSale" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/TextStyleCommission"
                android:text="Comm" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  :  " />
            <TextView

                style="@style/TextStyleCommission"
                android:layout_weight="1"
                android:text="0.00"
                android:id="@+id/tv_commission" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/TextStyleCommission"
                android:text="Charge"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  :  " />


            <TextView

                style="@style/TextStyleCommission"
                android:layout_weight="1"
                android:text="0.00"
                android:id="@+id/tv_charge" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                style="@style/TextStyleCommission"
                android:text="Txn Count"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  :  " />


            <TextView

                style="@style/TextStyleCommission"
                android:layout_weight="1"
                android:text="0.00"
                android:id="@+id/tv_txnCount"
                />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>