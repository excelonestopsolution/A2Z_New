                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:background="@drawable/bg_white_30"
                              android:padding="8dp"
                              android:paddingStart="16dp"
                              android:paddingEnd="16dp"
                              android:layout_marginTop="16dp"
