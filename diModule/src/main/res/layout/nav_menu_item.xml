<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_margin="2dp"
        android:layout_height="wrap_content">



    <ImageView
        android:id="@+id/nav_menu_item_icon"
        android:src="@android:drawable/sym_def_app_icon"
        android:layout_centerVertical="true"
        android:layout_width="25dp"
        android:scaleType="fitXY"
        android:layout_height="25dp"
        android:layout_marginLeft="20dp" />

    <TextView
        android:id="@+id/nav_menu_item_title"
        android:layout_toRightOf="@+id/nav_menu_item_icon"
        android:layout_toLeftOf="@+id/nav_menu_item_arrow"
        android:layout_width="match_parent"
        android:gravity="center|left"
        android:layout_centerVertical="true"
        android:layout_alignBaseline="@+id/nav_menu_item_icon"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:text="menu"
        android:textColor="@color/text_color_1"
        android:textSize="15sp"/>

    <ImageView
        android:id="@+id/nav_menu_item_arrow"
        android:layout_width="30dp"
        android:layout_height="30dp"

        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/v_arrow_down" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1.1dp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="5dp"
        android:paddingBottom="5dp"
        android:layout_marginRight="8dp"
        android:background="@color/text_color_2"/>
</LinearLayout>