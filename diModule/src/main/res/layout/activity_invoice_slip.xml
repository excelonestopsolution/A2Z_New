<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:id="@+id/ll_slip"
      tools:visibility="visible"
      android:visibility="gone"

      android:orientation="vertical">

      <ScrollView
          android:id="@+id/scrollView"
          android:layout_margin="2dp"
          android:padding="3dp"

          android:background="@drawable/bg_white_0"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="8dp"
                  android:orientation="horizontal">

                  <ImageView
                      android:layout_width="60dp"
                      android:layout_height="60dp"
                      android:layout_gravity="center"
                      android:scaleType="fitXY"
                      android:src="@drawable/logo_small" />

                  <LinearLayout
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_weight="1"
                      android:paddingLeft="10dp"
                      android:paddingRight="10dp"
                      android:layout_gravity="center">

                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">

                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_gravity="center"
                              android:textStyle="bold"
                              android:textColor="@color/text_color_1"
                              android:textSize="14sp"
                              android:text="Shop Name          "/>
                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_gravity="center"
                              android:textSize="14sp"
                              android:text="   :   "/>
                          <TextView
                              android:id="@+id/tv_shopName"
                              android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:layout_weight="2"
                              android:textStyle="normal"
                              android:textSize="14sp"
                              android:layout_gravity="center"
                              android:textColor="@color/text_color_3"
                              android:text=""/>

                      </LinearLayout>
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:layout_marginTop="2dp">

                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textStyle="bold"
                              android:layout_gravity="center"
                              android:textColor="@color/text_color_1"
                              android:textSize="14sp"
                              android:text="Contact Number "/>
                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_gravity="center"
                              android:textSize="14sp"
                              android:text="   :   "/>
                          <TextView
                              android:id="@+id/tv_contactNumber"
                              android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:layout_weight="2"
                              android:textStyle="normal"
                              android:textSize="14sp"
                              android:layout_gravity="center"
                              android:textColor="@color/text_color_3"
                              android:text=""/>

                      </LinearLayout>

                  </LinearLayout>
                  <LinearLayout
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_weight="1"
                      android:paddingLeft="10dp"
                      android:paddingRight="10dp"
                      android:layout_gravity="center">

                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">

                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_gravity="center"
                              android:textStyle="bold"
                              android:textColor="@color/text_color_1"
                              android:textSize="14sp"
                              android:text="Receipt #       "/>
                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_gravity="center"
                              android:textSize="14sp"
                              android:text="   :   "/>
                          <TextView
                              android:id="@+id/tv_receiptNo"
                              android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:layout_weight="2"
                              android:textStyle="normal"
                              android:textSize="14sp"
                              android:layout_gravity="center"
                              android:textColor="@color/text_color_3"
                              android:text=""/>

                      </LinearLayout>
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:layout_marginTop="2dp">

                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textStyle="bold"
                              android:layout_gravity="center"
                              android:textColor="@color/text_color_1"
                              android:textSize="14sp"
                              android:text="Date                "/>
                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_gravity="center"
                              android:textSize="14sp"
                              android:text="   :   "/>
                          <TextView
                              android:id="@+id/tv_date"
                              android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:layout_weight="2"
                              android:textStyle="normal"
                              android:textSize="14sp"
                              android:layout_gravity="center"
                              android:textColor="@color/text_color_3"
                              android:text=" "/>

                      </LinearLayout>

                  </LinearLayout>


              </LinearLayout>
              <View
                  android:layout_width="match_parent"
                  android:layout_height="0.4dp"
                  android:layout_marginTop="3dp"
                  android:layout_marginBottom="3dp"
                  android:background="#AFA9A9"/>
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"

                  android:orientation="vertical"
                  >


                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">

                      <LinearLayout
                          android:id="@+id/sender_lin"
                          android:layout_width="0dp"
                          android:layout_weight="1"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">

                          <TextView
                              style="@style/TestStyleSlip1"
                              android:id="@+id/tvs_senderName"
                              android:text="Sender Name"/>

                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_gravity="center"
                              android:textStyle="bold"
                              android:textColor="@color/text_color_1"
                              android:textSize="12sp"
                              android:text="  :  "/>

                          <TextView
                              style="@style/TestStyleSlip2"
                              android:id="@+id/tv_senderName"
                              android:text=""/>

                      </LinearLayout>
                      <LinearLayout
                          android:layout_width="0dp"
                          android:layout_weight="1"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">

                          <TextView
                              style="@style/TestStyleSlip1"
                              android:id="@+id/tvs_senderNumber"
                              android:text="Sender Number"/>
                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_gravity="center"
                              android:textStyle="bold"
                              android:textColor="@color/text_color_1"
                              android:textSize="12sp"
                              android:text="  :  "/>

                          <TextView
                              style="@style/TestStyleSlip2"
                              android:id="@+id/tv_senderNumber"
                              android:text=""/>

                      </LinearLayout>

                  </LinearLayout>
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">

                      <LinearLayout
                          android:layout_width="0dp"
                          android:layout_weight="1"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">

                          <TextView
                              style="@style/TestStyleSlip1"
                              android:id="@+id/tvs_accountNo"
                              android:text="Account Number"/>
                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_gravity="center"
                              android:textStyle="bold"
                              android:textColor="@color/text_color_1"
                              android:textSize="12sp"
                              android:text="  :  "/>

                          <TextView
                              style="@style/TestStyleSlip2"
                              android:id="@+id/tv_accountNo"
                              android:text=""/>

                      </LinearLayout>
                      <LinearLayout
                          android:id="@+id/bene_lin"
                          android:layout_width="0dp"
                          android:layout_weight="1"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">

                          <TextView
                              style="@style/TestStyleSlip1"
                              android:id="@+id/tvs_beneficiaryName"
                              android:text="Beneficiary Name "/>
                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_gravity="center"
                              android:textStyle="bold"
                              android:textColor="@color/text_color_1"
                              android:textSize="12sp"
                              android:text="  :  "/>

                          <TextView
                              style="@style/TestStyleSlip2"
                              android:id="@+id/tv_beneName"
                              android:text=""/>

                      </LinearLayout>

                  </LinearLayout>
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">

                      <LinearLayout
                          android:layout_width="0dp"
                          android:layout_weight="1"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">

                          <TextView
                              style="@style/TestStyleSlip1"
                              android:id="@+id/tvs_ifscCode"
                              android:text="IFSC Code"/>
                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_gravity="center"
                              android:textStyle="bold"
                              android:textColor="@color/text_color_1"
                              android:textSize="12sp"
                              android:text="  :  "/>

                          <TextView
                              style="@style/TestStyleSlip2"
                              android:id="@+id/tv_ifse_code"
                              android:text=""/>

                      </LinearLayout>
                      <LinearLayout
                          android:layout_width="0dp"
                          android:layout_weight="1"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">

                          <TextView
                              style="@style/TestStyleSlip1"
                              android:text="Transaction Type"/>
                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_gravity="center"
                              android:textStyle="bold"
                              android:textColor="@color/text_color_1"
                              android:textSize="12sp"
                              android:text="  :  "/>

                          <TextView
                              android:id="@+id/tv_transactionType"
                              style="@style/TestStyleSlip2"
                              android:text="" />

                      </LinearLayout>

                  </LinearLayout>

                  <View
                      android:layout_width="match_parent"
                      android:layout_height="0.4dp"
                      android:layout_marginTop="3dp"
                      android:layout_marginBottom="3dp"
                      android:background="#AFA9A9"/>
                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textSize="14sp"
                      android:textStyle="bold"
                      android:gravity="center"
                      android:text="Transaction Detail"
                      android:textColor="@color/text_color_3"
                      android:layout_marginBottom="5dp"/>



                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">

                      <TextView
                          style="@style/TestStyleSlip1"
                          android:textStyle="bold"
                          android:gravity="center"
                          android:text="Service Provider"/>


                      <TextView
                          android:visibility="visible"
                          style="@style/TestStyleSlip1"
                          android:textStyle="bold"
                          android:gravity="center"
                          android:id="@+id/tvs_txnid"
                          android:text="Transaction ID"/>
                      <TextView
                          style="@style/TestStyleSlip1"
                          android:textStyle="bold"
                          android:gravity="center"
                          android:id="@+id/tvs_ipmsUtr"
                          android:text="IMPS/UTR NO."/>


                      <TextView
                          style="@style/TestStyleSlip1"
                          android:textStyle="bold"
                          android:gravity="center"
                          android:text="Amount"/>
                      <TextView
                          style="@style/TestStyleSlip1"
                          android:textStyle="bold"
                          android:gravity="center"
                          android:text="Status"/>


                  </LinearLayout>
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="3dp"
                      android:orientation="horizontal">

                      <TextView
                          style="@style/TestStyleSlip1"
                          android:gravity="center"
                          android:id="@+id/tv_serviceProvider"
                          android:text=""/>


                      <TextView
                          style="@style/TestStyleSlip1"
                          android:gravity="center"
                          android:id="@+id/tv_transaction_id"
                          android:text=""/>
                      <TextView
                          style="@style/TestStyleSlip1"
                          android:gravity="center"
                          android:id="@+id/tv_impUtrNo"
                          android:text=""/>


                      <TextView
                          style="@style/TestStyleSlip1"
                          android:gravity="center"
                          android:id="@+id/tv_amount"
                          android:text=""/>
                      <TextView
                          style="@style/TestStyleSlip1"
                          android:gravity="center"
                          android:id="@+id/tv_status"
                          android:text=""/>

                  </LinearLayout>


                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/ll_add_commission"
                      android:visibility="visible"
                      android:background="@drawable/bg_white_5"
                      android:orientation="horizontal">

                      <TextView
                          style="@style/TestStyleSlip1"
                          android:textSize="16sp"
                          android:layout_weight="2"
                          android:gravity="center"
                          android:textColor="@color/text_color_2"
                          android:textStyle="bold"
                          android:text="Add Commission"/>


                      <EditText
                          android:textSize="16sp"
                          style="@style/TestStyleSlip2"
                          android:layout_height="match_parent"
                          android:textStyle="bold"
                          android:layout_margin="5dp"
                          android:gravity="center"
                          android:id="@+id/ed_commission"
                          android:background="@drawable/bg_white_5"
                          android:inputType="number"
                          android:focusable="true"
                          android:text=""/>

                      <Button
                          android:textSize="16sp"
                          style="@style/TestStyleSlip2"
                          android:id="@+id/btn_set_commission"
                          android:layout_weight="2"
                          android:textStyle="bold"
                          android:textColor="@color/white"
                          android:layout_margin="5dp"
                          android:background="@drawable/bg_light_blue_5"
                          android:text="Set"/>

                  </LinearLayout>
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="8dp"
                      android:orientation="horizontal">

                      <TextView
                          style="@style/TestStyleSlip1"
                          android:textSize="14sp"
                          android:textColor="@color/text_color_3"
                          android:textStyle="bold"
                          android:text="Total Amount Rs."/>
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:textStyle="bold"
                          android:textColor="@color/text_color_1"
                          android:textSize="14sp"
                          android:text="  :  "/>

                      <TextView
                          android:textSize="14sp"
                          android:id="@+id/tv_totalAmount"
                          style="@style/TestStyleSlip2"
                          android:textStyle="bold"
                          android:text="0.00"/>

                  </LinearLayout>
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">

                      <TextView
                          style="@style/TestStyleSlip1"
                          android:textSize="14sp"
                          android:textColor="@color/text_color_3"
                          android:textStyle="bold"
                          android:text="Amount in word"/>
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:textStyle="bold"
                          android:textColor="@color/text_color_1"
                          android:textSize="14sp"
                          android:text="  :  "/>

                      <TextView
                          android:textSize="14sp"
                          style="@style/TestStyleSlip2"
                          android:id="@+id/tv_amountInWord"
                          android:textStyle="bold"
                          android:text=""/>

                  </LinearLayout>



              </LinearLayout>
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Term and Conditions apply."/>
          </LinearLayout>


      </ScrollView>
      <Button
          android:layout_width="200dp"
          android:layout_height="wrap_content"
          android:text="print slip"
          android:textColor="@color/white"
          android:visibility="gone"
          tools:visibility="visible"
          android:background="@drawable/bg_light_blue_5"
          android:layout_gravity="center"
          android:id="@+id/printSlip"
          android:gravity="center"
          />

  </LinearLayout>
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminateDrawable="@drawable/myprogress_style" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ll_retry"
        android:visibility="gone"
        tools:visibility="gone"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/yellow_dark"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:text="Something went wrong!"/>

        <Button

            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/btn_retry"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:background="@drawable/bg_light_blue_5"
            android:text="Retry"/>

    </LinearLayout>
</RelativeLayout>