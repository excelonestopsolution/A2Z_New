<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPadding="16dp"
    app:cardCornerRadius="8dp"
    android:id="@+id/root_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_message_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:text="Please confirm provided PAN Number"
            android:textColor="@color/edit_text_heading"
            android:textSize="16sp" />



        <TextView
            android:layout_width="match_parent"
            android:padding="8dp"
            android:paddingStart="0dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:id="@+id/tv_message"
            android:gravity="start"
            android:textStyle="bold"
            tools:text=""
            android:textColor="@color/text_color_2" />

        <TextView
            android:id="@+id/tv_message_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:text="Mobile Number once submitted can not be change"
            android:textColor="@color/edit_text_heading"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/ll_action"
            android:layout_marginTop="12dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:id="@+id/btn_cancel"
                android:textColor="@color/black"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:text="Cancel"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="0.3"
                />

            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_light_blue_5"
                android:gravity="center"
                android:text="Submit"
                android:textColor="@color/white" />

        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>