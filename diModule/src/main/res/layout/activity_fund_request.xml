    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.login.LoginActivity">

        <LinearLayout
            android:id="@+id/myLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">


                <TextView
                    style="@style/TextStyle1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:gravity="center"
                    android:text="Fund Request"
                    android:textSize="26sp" />

                <ImageButton
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/imgBtn_back"
                    android:background="@android:color/transparent"
                    android:src="@drawable/icon_back" />
            </RelativeLayout>

            <TextView
                android:visibility="gone"
                style="@style/TextStyle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Approver Details" />

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_approvalDetail"
                style="@style/AppEditText"
                android:textSize="16sp"
                android:textColor="@color/text_color_2"
                android:background="@drawable/bg_white_5" />

            <TextView
                android:visibility="gone"
                style="@style/TextStyle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Request To" />

            <LinearLayout
                android:visibility="gone"

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/bg_white_5"
                android:gravity="left"
                android:inputType="number"
                android:orientation="horizontal"
                android:singleLine="true"

                >

                <Spinner

                    android:id="@+id/spn_requestTo"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:inputType="number"

                    />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_toAccount"
                tools:visibility="visible"
                android:orientation="vertical">

                <TextView
                    style="@style/TextStyle1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="To Account" />

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/bg_white_5"
                    android:gravity="left"
                    android:inputType="number"
                    android:orientation="horizontal"
                    android:singleLine="true"

                    >

                    <Spinner

                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:id="@+id/spn_toAccount"

                        />

                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_centerInParent="true"
                        tools:visibility="visible"
                        android:indeterminateDrawable="@drawable/myprogress_style"
                        android:visibility="gone"
                        android:id="@+id/progressBar_toAccount" />


                </LinearLayout>

            </LinearLayout>


            <TextView
                style="@style/TextStyle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Payment Mode" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/bg_white_5"
                android:gravity="left"
                android:inputType="number"
                android:orientation="horizontal"
                android:singleLine="true"

                >

                <Spinner

                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:id="@+id/spn_paymentMode"

                    />

            </LinearLayout>

            <TextView
                style="@style/TextStyle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Payment Date" />

            <TextView
                android:id="@+id/tv_paymentDate"
                style="@style/AppEditText"
                android:textSize="16sp"
                android:background="@drawable/bg_white" />


            <TextView
                style="@style/TextStyle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Amount" />

            <EditText
                android:id="@+id/ed_amount"
                style="@style/AppEditText"
                android:textSize="16sp"
                android:background="@drawable/bg_white"
                android:hint="Enter Amount"
                android:inputType="number" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_bankName"
                android:visibility="gone"
                android:orientation="vertical">


                <TextView
                    style="@style/TextStyle1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bank Name" />

                <EditText
                    android:id="@+id/ed_bankName"
                    style="@style/AppEditText"
                    android:textSize="16sp"
                    android:background="@drawable/bg_white"
                    android:hint="Enter Bank Name" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_refNumber"
                android:visibility="gone"
                tools:visibility="visible"
                android:orientation="vertical">


                <TextView
                    style="@style/TextStyle1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ref Number" />

                <EditText
                    android:id="@+id/ed_refNumber"
                    style="@style/AppEditText"
                    android:textSize="16sp"
                    android:background="@drawable/bg_white"
                    android:hint="Required" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_onlineMode"
                tools:visibility="visible"
                android:orientation="vertical">


                <TextView
                    style="@style/TextStyle1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Online Mode" />

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/bg_white_5"
                    android:gravity="left"
                    android:inputType="number"
                    android:orientation="horizontal"
                    android:singleLine="true"

                    >

                    <Spinner

                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:id="@+id/spn_online_mode"

                        />

                </LinearLayout>

            </LinearLayout>


            <TextView
                android:visibility="gone"
                style="@style/TextStyle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Remark" />

            <EditText
                android:visibility="gone"
                android:id="@+id/ed_remark"
                android:layout_width="match_parent"
                android:layout_height="92dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/bg_white"
                android:gravity="top"
                android:hint="Enter Remark"
                android:padding="10dp"
                android:textColor="@color/text_color_2"
                android:textSize="16sp"
                android:textStyle="normal" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:visibility="visible"
                tools:visibility="visible"
                android:layout_marginRight="30dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_file_name"
                    style="@style/TextStyle1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:singleLine="false"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"

                    android:text="Upload Request Slip" />


                <com.google.android.material.button.MaterialButton
                    style="@style/AppButton.Small.Primary"
                    android:text="Upload"
                    android:id="@+id/btn_image_upload" />


            </LinearLayout>

            <ImageView
                android:id="@+id/iv_slip"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:adjustViewBounds="true"
                android:background="@drawable/bg_white"
                android:padding="1.5dp"
                android:scaleType="centerInside"
                android:textColor="@color/text_color_2"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_incorrect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/bg_orange_5"
                android:gravity="center"
                android:padding="10dp"
                android:text="Something went wrong!"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:visibility="gone"
                tools:visibility="visible" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="60dp"
                android:gravity="center"

                >

                <Button
                    android:id="@+id/btn_requestPayment"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:background="@drawable/bg_light_blue_5"
                    android:text="Request Payment"
                    android:textColor="#fff" />

                <RelativeLayout
                    android:id="@+id/rl_progress"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:background="@drawable/bg_orange_5"
                    android:text="Login"
                    android:textColor="#fff"
                    android:visibility="gone">

                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:indeterminateDrawable="@drawable/myprogress_style"
                        android:visibility="invisible"
                        tools:visibility="visible" />
                </RelativeLayout>

            </RelativeLayout>


        </LinearLayout>


    </ScrollView>
</layout>