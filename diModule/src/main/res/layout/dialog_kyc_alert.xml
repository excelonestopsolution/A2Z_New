<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPadding="16dp"
    app:cardCornerRadius="8dp"
    android:id="@+id/root_layout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:padding="8dp"
                android:text="Add Bank First!"
                android:textColor="@color/red"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btn_cancel"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:layout_alignParentRight="true"
                android:tint="@color/black"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_cross_close2"/>
        </RelativeLayout>


        <TextView
            android:padding="8dp"
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textStyle="bold"
            android:text="Please add aeps settlement bank first, to enable Aadhaar enable playment system"
            android:textColor="@color/edit_text_heading"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btn_proceed"
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:padding="4dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_light_blue_5"
            android:gravity="center"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:text="Proceed"
            android:textColor="@color/white" />


    </LinearLayout>


</androidx.cardview.widget.CardView>